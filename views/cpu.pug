doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles/style.css")
        title #{title}
    body
        main.main
            navbar.sidebar
                div.nav-section.profile
                    a.nav-link(href="") My Profile 
                div.nav-section.cpu
                    a.nav-link(href="/cpu") CPU 
                
                div.nav-section.system
                    a.nav-link(href="/device") System
            
            div.info
                div.chartContainer     
                    canvas#myChart

                div.cpuInfo
                    h3.header_cpu CPU Information

                    div.cpuInfo-table
                            div.cpu_data.cpuManufacturer-heading CPU Manufacturer 
                            div.cpu_data.cpuManufacturer-name= system.cpuManufacturer

                            div.cpu_data.cpuBrand-heading CPU Brand 
                            div.cpu_data.cpuBrand-name= system.cpuBrand

                            div.cpu_data.physicalCores-heading Physical Cores 
                            div.cpu_data.physicalCores-number= system.cpu_physicalCore

                            div.cpu_data.cpuBrand-heading CPU Brand 
                            div.cpu_data.cpuBrand-name= system.cpuBrand



        script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/1.5.1/axios.min.js')
        script(src="https://cdn.jsdelivr.net/npm/chart.js")
        script(src="/js/cpu.js")